@{
    Layout = null;
}
@model SHAN.Service.企业用户DTO

<!DOCTYPE html>

<html style="font-size:87.5%">
<head>
    <meta charset="utf-8">
    <title>登陆</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" href="/Content/layui/css/layui.css" media="all" />
    <link rel="stylesheet" href="/Content/bootstrap.css" media="all" />
    <style>
        .layui-tab-content {
            padding:0;
        }
        .card{
            border:none;
        }
        .c_top {
            background: #250242;
            height: 50px;
            display: flex;
        }
    </style>
</head>
<body>
    <div class="c_top">
        <div >
            <img src="/demo/img/head_logo.png" width="114" height="50">
        </div>
    </div>
    <div class="container-flush">
        <div class="d-flex justify-content-center mt-3">
            <h2>登陆</h2>
        </div>
        <form class="container mt-3 layui-form" id="reg" action="DoReg">
            <div class="form-group">
                <input type="email" class="form-control" name="LogName" lay-ignore lay-verify="email" placeholder="电子邮件" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="Pwd" lay-verify="required" placeholder="登陆密码" />
            </div>

            <button type="button" class=" btn btn-block " lay-submit lay-filter="formDemo" style="background-color:#00785a;color:white;padding:0.8rem;font-size:1.3rem">登&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;录</button>
        </form>

    </div>
    <script type="text/javascript" src="/Content/layui/layui.js"></script>
    <script>
        layui.use(['form', 'layer', 'element'], function () {
            var form = layui.form
            layer = parent.layer === undefined ? layui.layer : top.layer,
                $ = layui.jquery;
            var element = layui.element;

            form.on('submit(formDemo)', function (data) {
                var index = layer.msg('登陆中，请稍候', { icon: 16, time: false, shade: 0.8 });
                $.post("/SKL/SKL/Login", data.field, function (res) {
                    if (res.code === 200) {
                        location.href = res.msg;
                    } else {
                        layer.msg(res.msg);
                    }
                    
                });
                
                //return false;
            });
        });

    </script>
</body>
</html>
