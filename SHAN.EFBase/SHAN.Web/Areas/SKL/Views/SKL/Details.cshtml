@{
    Layout = null;
}
@model SHAN.Service.企业用户DTO

<!DOCTYPE html>

<html style="font-size:87.5%">
<head>
    <meta charset="utf-8">
    <title>名录列表</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" href="/Content/layui/css/layui.css" media="all" />
    <link rel="stylesheet" href="/Content/bootstrap.css" media="all" />
    <style>
        .layui-tab-content {
            padding:0;
        }
        .card{
            border:none;
        }
    </style>
</head>
<body>
    <form class="pt-3 pb-1" action="http://m.baidu.com/s" style="background-color: #250242;" id="indexsub">
        <div class="form-group row ml-2 mr-2">
            <label class="control-label col-3 pr-0 mb-0" style="color:white;font-size:1.5rem;">商快链</label>
            <div class="input-group col-9 ">
                <input class="form-control" name="word" type="search" />
                <div class="input-group-prepend" onclick="indexsub()" style="background-color:white;border-top-right-radius:.25rem;border-bottom-right-radius:.25rem;overflow:hidden">
                    <i class="input-group-text layui-icon" style="background-color:white;">&#xe615;</i>
                </div>
            </div>
        </div>
    </form>
    <div class="container-flush">
        <div class="layui-tab">
            <ul class="layui-tab-title">
                <li class="layui-this">摘要</li>
                <li>风险</li>
                <li>更多</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    <div class="card ">
                        <div class="card-body pt-0 pb-0">
                            <h2 class="card-title">一般情况</h2>
                        </div>
                            <div class="card-body">
                                
                                <h6 class="card-subtitle mb-2 text-muted">公司名称</h6>
                                <h4 class="card-title" style="height:1.5rem">@Model.CompanyName</h4>
                                <h6 class="card-subtitle mb-2 text-muted">地址</h6>
                                <h4 class="card-title" style="height:1.5rem">@Model.Address</h4>
                                <h6 class="card-subtitle mb-2 text-muted">网址</h6>
                                <a href="http://@Model.WebSite"><h4 class="card-title" style="height:1.5rem">@Model.WebSite</h4></a>
                                <h6 class="card-subtitle mb-2 text-muted">业务范围</h6>
                                <h4 class="card-title" style="height:1.5rem">@Model.Service</h4>
                                <h6 class="card-subtitle mb-2 text-muted">联系方式</h6>
                                <h4 class="card-title" style="height:1.5rem">@Model.Tel</h4>
                            </div>

                        </div>
                </div>
                <div class="layui-tab-item">
                    <div class="card ">
                        <div class="card-body">

                            <h2 class="card-title">更多内容登陆后查看</h2>

                        </div>

                    </div>
                </div>
                <div class="layui-tab-item">
                    <div class="card ">
                        <div class="card-body">

                            <h2 class="card-title">更多内容登陆后查看</h2>

                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
    <script type="text/javascript" src="/Content/layui/layui.js"></script>
    <script>
        layui.use(['form', 'layer', 'element'], function () {
            var form = layui.form
            layer = parent.layer === undefined ? layui.layer : top.layer,
                $ = layui.jquery;
            var element = layui.element;
        });

        function indexsub() {
            $('#indexsub').submit();
        }
    </script>
</body>
</html>
