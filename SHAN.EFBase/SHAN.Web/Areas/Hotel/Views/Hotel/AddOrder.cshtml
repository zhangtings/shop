@{
    Layout = null;
}

<!DOCTYPE html>

<html style="font-size:87.5%">
<head>
    <meta charset="utf-8">
    <title>房间类型</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" href="/Content/layui/css/layui.css" media="all" />
    <link rel="stylesheet" href="/Content/bootstrap.css" media="all" />
    <style>
        .酒店信息 {
            margin-bottom:1rem;
        }
    </style>
</head>
<body style="background-color: #f7f6f5">
    <form class="layui-form">

            @*<header class="Cnewheader" style="background: url(./index/hot_city01.jpg); background-size: 100% auto">
                <div class="pure-g main">
                    <div class="pure-u-1-5 return "><a href="javascript:void(0)"><i class="icon-back"></i></a></div>
                    <div class="pure-u-3-5 title Ltac">
                        <h3>填写订单</h3>
                    </div>
                    <div class="pure-u-1-5 action Ltar">
                        <div class="inn"></div>
                    </div>
                </div>
            </header>*@
            <div class="container" style="margin-top:1rem">
                    <div class="酒店信息">
                        <div class="pure-g title" >
                            <div>
                                <span class="CName" style="font-size:1.1rem">琼海酒店测试</span>
                            </div>
                        </div>
                        <div class="orderTime row" style="color: #bfbfbf;">
                            <div class="col-9" style="font-size:0.9rem">
                                <i class="layui-icon">&#xe637;</i>&nbsp;<span class="checkin">入住:&nbsp;</span><span class="intime" style="color: black;margin-right:1.5rem">10-15</span>
                                
                                <span class="checkout">离店:&nbsp;</span><span class="outtime" style="color: black;">2018-10-15</span>
                            </div>
                            <div class="col-3">
                                <span class="col nights" style="font-size:0.9rem">1晚</span>
                            </div>
                        </div>
                        <div class="position row" style="color: #bfbfbf;">
                            <div class="col" style="font-size:0.9rem"><i class="layui-icon">&#xe715;</i>&nbsp;<span>琼海市嘉定区南翔古猗园路371号</span></div>
                        </div>

                    </div>
                    <div class="预定信息">
                        <div class="row align-content-center" style="line-height:3.7rem;background-color: white;font-size:1rem;margin-top:2px;">
                            <div class="col-8">
                                <div class=" rtName"></div>
                            </div>
                            <div class="col-4 row justify-content-center align-items-center">
                                <div class="row align-items-center justify-content-between" style="font-size:1.2rem;border:1px solid #f3f3f3;line-height:2rem;width:100%">
                                    <span class="minus" style="border-right:1px solid #f3f3f3;padding:0 3px">－</span>
                                    <span class="RNum">1</span>
                                    <span class="plus" style="border-left:1px solid #f3f3f3;padding:0 3px">＋</span>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="line-height:3.7rem;background-color: white;font-size:1rem;margin-top:2px;">
                            <div class="col-3 ">
                                <div class="wrap"><span>入住人</span><i class="icon-ask"></i></div>
                            </div>
                            <div class="col-9 ">
                                <div class="wrap">
                                    <input type="text" id="GName" placeholder="请输入真实姓名" lay-verify="required" style="width: 100%;border:0">
                                </div>
                            </div>
                        </div>
                        <div class="row " style="line-height:3.7rem;background-color: white;font-size:1rem;margin-top:2px;">
                            <div class="col-3">
                                <div class="wrap"><span>手机号</span></div>
                            </div>
                            <div class="col-9">
                                <div class="wrap">
                                    <input type="text" id="GMobile" placeholder="用于接收通知" maxlength="11" lay-verify="required" style="width: 100%;border:0">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class=" 提示信息" style="height:5rem;">
                        <div class="row" style="margin-top:1rem">
                            <div class="col-1"><i class="layui-icon ">&#xe60b;</i></div>
                            
                            <div class="col Tips" style="font-size:0.9rem;color: #bfbfbf;">
                                <p>请于入住日下午14:00后办理入住，如提前到店，视酒店空房情况安排。</p>

                                <p>
                                    本订单最晚保留时间为19:00,若到店时间较晚，建议预付房费

                                <p>
                                    最晚取消时间：10月10日18:00前，逾时无法取消和退款。

                                <p>2018年3.15日起所有房型的所有预订均需客户预付首晚房费，预付客人最晚取消时间是入住提前一天中午12:00前。
                            </div>
                        </div>
                    </div>
            </div>


            <nav class="navbar navbar-expand-sm bg-white fixed-bottom row" style="padding:0">
                    <div class="col text-left" style="margin-left:1rem">
                        <span class="jiage" style="color:red"></span>
                    </div>
                    <div class="col text-right">
                        <button class="layui-btn" lay-submit="" lay-filter="addOrder" style="background-color:#7f1f59">提交订单</button>
                    </div>
            </nav>
        <input type="hidden" id="GTId" />
        <input type="hidden" id="RTId" />
        <input type="hidden" id="CId" />
    </form>
    <script type="text/javascript" src="/Content/layui/layui.js"></script>
    <script>
        layui.use(['form', 'layer', 'table', 'laytpl'], function () {
            var form = layui.form,
                layer = parent.layer === undefined ? layui.layer : top.layer,
                $ = layui.jquery;

            form.on("submit(addOrder)", function (data) {
                //弹出loading
                var index = top.layer.msg('数据提交中，请稍候', { icon: 16, time: false, shade: 0.8 });
                $.post("/hotel/hotel/OrderSave", {
                    CompanyId: $("#CId").val(),
                    CompanyName: $(".CName").text(),
                    InTime: $(".intime").text(),
                    RTId: $("#RTId").val(),
                    GTId: $("#GTId").val(),
                    RNum: $(".RNum").text(),
                    GName: $("#GName").val(),
                    GMobile: $("#GMobile").val(),
                    //     userSex : data.field.sex,  //性别
                    //     userGrade : data.field.userGrade,  //会员等级
                    //     userStatus : data.field.userStatus,    //用户状态
                    //     newsTime : submitTime,    //添加时间
                    //     userDesc : $(".userDesc").text(),    //用户简介
                }, function (res) {
                    top.layer.close(index);
                    top.layer.msg("预定成功！");
                    layer.closeAll("iframe");
                })
                //setTimeout(function () {
                //    top.layer.close(index);
                //    top.layer.msg("预定成功！");
                //    layer.closeAll("iframe");
                //    //刷新父页面
                //    //parent.location.reload();
                //}, 2000);
                return false;
            });
            $(".minus").click(function () {
                var t = $(this).parent().find('.RNum');
                t.text(parseInt(t.text()) - 1);
                if (t.text() <= 1) {
                    t.text(1);
                }
            });
            $(".plus").click(function () {
                var t = $(this).parent().find('.RNum');
                t.text(parseInt(t.text()) + 1);
                if (t.text() <= 1) {
                    t.text(1);
                }
            });

        });



    </script>
</body>
</html>
