@using SHAN.Service
@model SHAN.Service.栏目DTO
@{
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@Model.Name</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" href="/Content/bootstrap.css" media="all" />
    <link rel="stylesheet" href="/Content/layui/css/layui.css" media="all" />
    <style>
        .layui-timeline-item:before {
            width: 6px;
            background-color: green;
        }

        .layui-timeline-axis {
            background-color: #f2f2f2;
            left: -2px;
        }
    </style>
</head>
<body style="background-color:#f2f2f2">
    <header class="container-fluid p-0 顶部">
        <div style="background-color:#1d8902;color:white;font-size:1.2rem;height:46px;line-height:46px;text-align:center"> 琼海市优质农业品牌开发服务协会</div>
    </header>
    <ul class="layui-timeline p-2">
        @{
            List<新闻DTO> list新闻 = ViewBag.list新闻;
            if (list新闻 == null || list新闻.Count < 1) {
        <li class="text-center">
            暂无数据
        </li>
            }
            foreach (var x in list新闻)
            {
                <li class="layui-timeline-item">
                    <i class="layui-icon layui-timeline-axis"></i>
                    <div class="layui-timeline-content layui-text">
                        <h3 class="layui-timeline-title">@x.Addtime.Value.ToString("yyyy年MM月dd日")</h3>
                        <div class="layui-timeline-title bg-white py-2 px-3 layui-btn-radius">
                            <span style="color:#333;font-size:16px">@x.Name</span>
                        </div>
                    </div>
                </li>
            }
        }

        
    </ul>

    <script type="text/javascript" src="/Content/layui/layui.js"></script>
    <script>

    </script>
</body>
</html>
