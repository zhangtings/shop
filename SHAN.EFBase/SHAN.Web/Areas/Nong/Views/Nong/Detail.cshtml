@model SHAN.Service.商家DTO
@{
    Layout = null;
    string imgurl = string.Empty;

    if (!string.IsNullOrEmpty(Model.Pic))
    {
        imgurl = Model.Pic.Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries).FirstOrDefault();
    }
}


<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8">
    <title>@Model.Title</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" href="/Content/bootstrap.css" media="all" />
    <link rel="stylesheet" href="/Content/layui/css/layui.css" media="all" />
    <style>
        .顶部信息 {
            width: 100%;
            height: 10rem;
            overflow: hidden;
            position: relative;
        }

        .视频封面 {
            position: absolute;
            top: 0;
            left: 0;
        }

        .播放按钮 {
            position: absolute;
            top: 40%;
            left: 40%;
        }

        .评价 {
            background-color: rgba(128, 128, 128, 0.75);
            width: 100%;
            top: 8.5rem;
            position: absolute;
            color: white;
            padding: 0 0.5rem;
        }

        .标题 {
            display: block;
            color: #080707;
            margin-left: 0.5rem;
            margin-top: 1rem;
        }

        .折扣 {
            padding-top: 1px;
            font-size: 20px;
            color: #FFB800;
            font-weight: bold;
        }

        .地址距离 {
            font-size: 1rem;
            line-height: 0.6rem;
            width: 80%;
        }

        .标签 {
            font-size: 1rem;
            line-height: 0.6rem
        }

        .全景图层 {
            background-color: #e4e4e4;
            font-size: 0.4rem;
            text-align: center;
            /*padding-top: 0.2rem;*/
        }

        .全景图 {
            width: 100%;
            height: 2.8rem;
        }

        .底部 {
            background-color: #f86d15;
            width: 100%;
            line-height: 1.2rem;
            color: #fff;
            text-align: center;
            display: block;
            font-size: 0.48rem;
            position: fixed;
            bottom: 0;
            z-index: 8
        }

        .produtc-top-info {
            border-radius: 25px;
            border: 2px solid red;
            color: white;
            font-size: 1rem;
            width: 50%;
            display: inline-block;
            background-color: #f86d15;
        }

        a, p, span {
            font-size: 1rem;
        }

        .xqbox {
            margin-bottom: 10px;
            border-top: 1px solid #e4e4e4;
            border-bottom: 1px solid #e4e4e4;
            font-size: 14px;
            line-height: 1.5;
            background-color: #fff;
        }

            .xqbox h1 {
                border-bottom: 1px solid #E0E0E0;
                line-height: 35px;
                padding-left: 10px;
                font-weight: bold;
                padding-bottom: 2px;
            }

        .pd10 {
            padding: 10px;
        }

        .scroll {
            width: 480px;
            height: 181px;
            margin: 0 auto 0 auto;
            position: relative;
            overflow: hidden;
        }

        .mod_01 {
            float: left;
            width: 480px;
        }

            .mod_01 img {
                display: block;
                width: 480px;
                height: 181px;
            }
    </style>
</head>
<body style="background-color: #f7f6f5">

    <div class="顶部信息">
        @{ if (!string.IsNullOrEmpty(Model.Video))
            {
                <div id="video">
                    <div class="aui-banner-wrapper-item">
                        <a href="#">
                            <video style="height:10rem;width:100%" controls="controls" x5-playsinline="" playsinline="" webkit-playsinline="" poster="" preload="auto">
                                <source src="@Model.Video" type="video/mp4" />
                                浏览器不支持此视频播放
                            </video>
                        </a>
                    </div>
                </div>
                <div id="videoimg" class="视频封面">
                    <div class="aui-banner-wrapper-item">
                        <a href="javascript:播放视频();">
                            <img src="@imgurl" style="height:10rem;width:100%">
                            <div id="播放按钮" class="播放按钮">
                                <img src="/Content/qianduan/images/bofang.png" style="width:20%" />
                            </div>
                        </a>
                    </div>

                </div>
            }
            <div class="layui-carousel" id="imglist" style="@(string.IsNullOrEmpty(Model.Video) ? "" : "display:none;") ">
                <div carousel-item="" style="height:10rem;width:100%">
                    @{
                        if (!string.IsNullOrEmpty(Model.Pic) && Model.Pic.Length > 0)
                        {
                            foreach (var item in Model.Pic.Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries))
                            {
                                <div><img src="@item" style="height:100%;width:100%"></div>
                            }
                        }

                    }
                </div>
            </div>
        }
    </div>
    @{
        if (!string.IsNullOrEmpty(Model.Video) && !string.IsNullOrEmpty(Model.Pic) && Model.Pic.Length > 0)
        {
            <div style="text-align:center;margin-top:0.2rem">
                <span style="display: inline-block;width:30%"><a href="javascript:showVideo();" class="produtc-top-info">视频</a></span>
                <span style="display: inline-block;width:30%"><a href="javascript:showImg();" class="produtc-top-info">图片</a></span>
            </div>
        }
        else
        {
            <div style="text-align:center;margin-top:0.2rem">
                <span style="display: inline-block;width:30%"><a href="#" class="produtc-top-info">视频</a></span>
                <span style="display: inline-block;width:30%"><a href="#" class="produtc-top-info">图片</a></span>
            </div>
        }
    }
    <H3 class="标题" style="">@Model.Title</H3>

    <hr>
    <div class="d-flex justify-content-start">
        <i class="col-1 layui-icon">&#xe715;</i>
        <div class="col">
            <span class="地址距离">@Model.Address</span><br />
        </div>

    </div>
    <hr>
    <div class="" id="info">
        <div class="pd10">
            @Html.Raw(Model.Des)
        </div>
    </div>

    <script type="text/javascript" src="/Content/layui/layui.js"></script>
    <script>
        var gtjson = "";
        layui.use(['laytpl', 'element', 'layer', 'jquery', 'laydate', 'rate', 'carousel'], function () {
            var element = layui.element;
            var laytpl = layui.laytpl;
            var laydate = layui.laydate;
            var rate = layui.rate
                , carousel = layui.carousel;

            $ = layui.$;

            rate.render({
                elem: '#star_box'
                , value: 5 //初始值
                , text: true //开启文本

                , readonly: true
                , setText: function (value) {
                    this.span.text(value + "分");
                }
            });

            carousel.render({
                elem: '#imglist'
                , interval: 3000
                , anim: 'fade'
                , height: '10rem'
                , width: '100%'
            });

        });

        function showImg() {
            $('#video').fadeOut(0);
            $('#imglist').fadeIn(300);

        }
        function showVideo() {
            $('#imglist').fadeOut(0);
            $('#video').fadeIn(300);

        }
        function 播放视频() {
            $('#videoimg').fadeOut(0);
            var video = document.getElementsByTagName('video')[0];
            video.play();
        }
    </script>
</body>
</html>
