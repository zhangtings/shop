@using SHAN.Service
@model SHAN.Service.栏目DTO
@{
                Layout = null;
}

<!DOCTYPE html>

<html style="font-size:100%">
<head>
    <meta charset="utf-8">
    <title>琼海优质农业品牌</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" href="/Content/bootstrap.css" media="all" />
    <link rel="stylesheet" href="/Content/layui/css/layui.css" media="all" />
    <style>
        a:link {
            text-decoration: none;
            color: black;
        }
    </style>
</head>
<body>

    <header class="container p-0 顶部">
        <div style="background-color:#1d8902;color:white;font-size:1.2rem;height:46px;line-height:46px;text-align:center"> 琼海市优质农业品牌开发服务协会</div>
    </header>
    <div class="container p-0">
        <div class="滚动 layui-carousel" id="imglist" style="height:150px">
            <div carousel-item="" style="height:100%;width:100%">
                @{
                    if (!string.IsNullOrEmpty(Model.Bz_3) && Model.Bz_3.Length > 0)
                    {
                        foreach (var item in Model.Bz_3.Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries))
                        {
                            <div><img src="@(item.IndexOf("/")==0?item:"/"+item)" style="height:100%;width:100%"></div>
                        }
                    }

                }
            </div>
        </div>
        <div class="新闻 d-flex flex-column p-2">
            <div class=" border-bottom border-top" style="">
                <span class="border-right" style="font-size:16px;color:#1d8902;height:40px;line-height:40px;font-weight:900;padding-right:2rem">协会公告</span>
            </div>
            @{
                List<新闻DTO> list公告 = ViewBag.公告list;
                if (list公告 != null) {
                    if (list公告.Count > 4) { list公告 = list公告.Take(4).ToList(); }
                    foreach (var g in list公告)
                    {
                        <a style="height:35px;line-height:35px" href="News?Id=@g.Id">@g.Name</a>
                    }
                }
            }
        </div>
        <div class="导航 d-flex flex-wrap p-1">
            <a class="col-6 p-1" href="Colinfo?Name=联系我们">
                <div class="px-2 d-flex flex-row justify-content-between" style="height:75px;background: #f05a5b;">
                    <div class="text-white">
                        <span style="font-size:16px">联系我们</span>
                        <p>栏目副标题</p>
                    </div>
                    <div><i class="layui-icon" style="font-size:4rem;color:white">&#xe63c;</i></div>
                </div>
            </a>
            <a class="col-6 p-1" href="NewsList?CName=行业信息">
                <div class="px-2 d-flex flex-row justify-content-between" style="height:75px;background: #ffc30d;">
                    <div class="text-white">
                        <span style="font-size:16px">行业信息</span>
                        <p>行业信息</p>
                    </div>
                    <div><i class="layui-icon" style="font-size:4rem;color:white">&#xe656;</i></div>
                </div>
            </a>
            <a class="col-6 p-1" href="BusiList">
                <div class="px-2 d-flex flex-row justify-content-between" style="height:75px;background: #35abe8;">
                    <div class="text-white">
                        <span style="font-size:16px">会员单位</span>
                        <p>共创美好琼海</p>
                    </div>
                    <div><i class="layui-icon" style="font-size:4rem;color:white">&#xe629;</i></div>
                </div>
            </a>
            <a class="col-6 p-1" href="Colinfo?Name=协会介绍">
                <div class="px-2 d-flex flex-row justify-content-between" style="height:75px;background: #7cc045;">
                    <div class="text-white">
                        <span style="font-size:16px">协会介绍</span>
                        <p>专注品牌开发服务</p>
                    </div>
                    <div><i class="layui-icon" style="font-size:4rem;color:white">&#xe63a;</i></div>
                </div>
            </a>
        </div>
        <div>

        </div>

    </div>
    <footer class="底部 text-center mt-2" style="height:30px;line-height:30px;font-size:12px;color:#999">版权所有©琼海市优质农业品牌开发服务协会   <p>技术支持：联物信息</p></footer>
    <script type="text/javascript" src="/Content/layui/layui.js"></script>
    <script>
        layui.use(['element', 'jquery', 'carousel'], function () {
            var element = layui.element,
                carousel = layui.carousel;
            $ = layui.$;

            carousel.render({
                elem: '#imglist'
                , interval: 3000
                , anim: 'fade'
                , height: '150px'
                , width: '100%'
            });
        });
    </script>
</body>
</html>
